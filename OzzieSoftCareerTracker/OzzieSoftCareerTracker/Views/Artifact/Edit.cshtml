@model OzzieSoftCareerTracker.Models.Artifact

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Artifact</legend>

        @Html.HiddenFor(model => model.ArtifactID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtifactName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArtifactName)
            @Html.ValidationMessageFor(model => model.ArtifactName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArtifactDescription)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ArtifactDescription)
            @Html.ValidationMessageFor(model => model.ArtifactDescription)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
