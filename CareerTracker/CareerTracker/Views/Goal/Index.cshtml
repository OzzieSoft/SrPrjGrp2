@model IEnumerable<CareerTracker.Models.Goal>

@{
    ViewBag.Title = "Index";
}

<h1>@Session["CurrentID"]</h1>

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="margin-left:30px">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
    foreach (var step in item.Steps)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => step.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => step.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => step.Description)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = step.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = step.ID })
            </td>
        </tr>
    }
}

</table>
