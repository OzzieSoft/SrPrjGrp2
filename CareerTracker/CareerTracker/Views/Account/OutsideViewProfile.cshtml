@model CareerTracker.Models.UserProfile
@{
    ViewBag.Title = "My Profile";
}

<h1>Profile</h1>

<br />

<h3>Artifacts</h3>

<table class="model-table">

    <tr>
        <th class="name-header">
            @Html.DisplayName("Name")
        </th>
        <th class="description-header">
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("Location")
        </th>
    </tr>


    @foreach (var item in Model.artifacts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
        </tr>
    }

</table>

<p style="height:20px;" />

<h3>Skills</h3>

<table class="model-table">

    <tr>
        <th class="name-header">
            @Html.DisplayName("Name")
        </th>
        <th class="description-header">
            @Html.DisplayName("Description")
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model.skills) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }

</table>

<p style="height:20px;" />

<h3>Goals</h3>

<table class="model-table">

    <tr>
        <th class="name-header">
            @Html.DisplayName("Name")
        </th>
        <th class="description-header">
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("Due Date")
        </th>
    </tr>

    @foreach (var item in Model.goals) {
        <tr style="border-top: 1px solid lightgray">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
        </tr>
        foreach (var step in item.Steps) {
            <tr>
                <td style="padding-left:3%">
                    @Html.DisplayFor(modelItem => step.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => step.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => step.DueDate)
                </td>
            </tr>
        }
    }

</table>

