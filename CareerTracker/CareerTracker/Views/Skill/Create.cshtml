@model CareerTracker.Models.SkillView

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Skill</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillObj.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SkillObj.Name)
            @Html.ValidationMessageFor(model => model.SkillObj.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillObj.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.SkillObj.Description)
            @Html.ValidationMessageFor(model => model.SkillObj.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillObj.Categories)
        </div>
        <div class="editor-field">
            @foreach (var k in Model.CategoriesList.Keys) {
                @Html.CheckBoxFor(model => model.CategoriesList[k])
                @Html.Raw(k);
            }
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SkillObj.Private)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.SkillObj.Private)
            @Html.ValidationMessageFor(model => model.SkillObj.Private)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
